<%if(typeof opPost === 'undefined') {
    opPost=false;
}%>
<div class="card <%-message.pending?'bg-secondary':'bg-light'%> mb-3" id="p-<%=message.getId()%>">
    <div class="card-header">
        <div class="card-title">
            <div class="pull-left">
                <% if(message.pending) { %>
                <span class="postInfo">
                    <span class="pending">Pending</span>
                </span>
                <% } %>
                <% if(link===false) { %>
                <%=message.getIdShort()%>
                <% } else { %>
                <a href="<%if(link=='thread'){%>/thread/<%=message.getId()%>/<% } else {%>#p-<%=message.getId()%><%}%>">
                    <%=message.getIdShort()%>
                </a>
                <% } %>
            </div>
        </div>
    </div>
    <div class="card-body">
        <%-htmlDisplay(message.message)%>
    </div>
    <div class="card-footer">
        <time class="pull-right">
            <i class="fa fa-calendar"></i><%=message.getFormattedDate()%>  <i class="fa fa-clock-o"></i><%=message.getFormattedTime()%>
        </time>
        <% if(opPost){ %>
        <i class="fa fa-mail-reply "></i>
        <a href="/thread/<%=message.getId()%>#reply">Reply</a>
        <% } %>
    </div>
</div>